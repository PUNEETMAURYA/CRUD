<%- include('partials/header.ejs') %>
<h3>Student Data</h3>
<form action='/' method="POST">
    <div class="row container-fluid main-div">
        <table class="table table-striped table-bordered table-dark">
            <thead>
                <tr>
                    
                    <th scope="col">Name</th>
                    <th scope="col">Roll</th>
                    <th scope="col">Age</th>
                    <th scope="col">City</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% Found.forEach(function(Student){ %>
                <tr>
                    <td><%= Student.Name %></td>
                    <td><%= Student.Roll %></td>
                    <td><%= Student.Age %></td>
                    <td><%= Student.State %></td>
                    <td><a href="/update/<%= Student._id %>"><input type="hidden" name="edit"  value="<%= Student._id %>"><i class="icon icon-edit fas fa-pen"></i></a></td>
                    <td><a href="/delete/<%= Student._id %>"><input type="hidden" name="delete" value="<%= Student._id %>"><i class="icon icon-delete fas fa-trash-alt"></i></a></td><br>
                </tr>
                <% }) %>
    
            </tbody>
        </table>
        <button type="submit" class="btn btn-outline-dark submit-button" name="insert">Insert New</button>
    </div>
</form>
    <%- include('partials/footer.ejs') %>